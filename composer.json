{
  "name": "powercloud/sonarqube-report-translator",
  "description": "Translates unsupported report files into Sonarqube's generic input format",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Horia Ardelean",
      "email": "horia.ardelean-ext@power.cloud"
    },
    {
      "name": "Michael Zippe",
      "email": "michael.zippe@power.cloud"
    }
  ],
  "require": {
    "php": ">=8.1",
    "symfony/console": "^6.1",
    "symfony/flex": "^1.3.1",
    "symfony/framework-bundle": "^6.1",
    "symfony/yaml": "^6.1",
    "ext-json": "*",
    "ext-simplexml": "*",
    "symfony/runtime": "^6.1",
    "symfony/serializer": "^6.1",
    "doctrine/annotations": "^1.0",
    "phpdocumentor/reflection-docblock": "^5.3",
    "phpstan/phpdoc-parser": "^1.15",
    "symfony/property-access": "^6.1",
    "symfony/property-info": "^6.1"
  }
  ,
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpmd/phpmd": "^2.11",
    "phpstan/phpstan": "^1.4",
    "squizlabs/php_codesniffer": "^3.7",
    "phpunit/phpunit": "^9",
    "vimeo/psalm": "^4.22",
    "symfony/phpunit-bridge": "^6.1"
  },
  "config": {
    "allow-plugins": {
      "symfony/flex": true,
      "symfony/runtime": true
    }
  },
  "autoload": {
    "psr-4": {
      "Powercloud\\SRT\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Powercloud\\SRT\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    },
    "phpmd": [
      "vendor/bin/phpmd ./ ansi phpmd.xml.dist"
    ],
    "phpcs": [
      "vendor/bin/phpcs --report=full"
    ],
    "phpcbf": [
      "vendor/bin/phpcbf"
    ],
    "phpstan": [
      "vendor/bin/phpstan analyse -c phpstan.neon --error-format=table --ansi"
    ],
    "psalm": [
      "vendor/bin/psalm --no-diff --output-format=compact"
    ],
    "deptrac": [
      "vendor/bin/deptrac analyse --report-uncovered --fail-on-uncovered --formatter=table"
    ],
    "test-unit": [
      "Composer\\Config::disableProcessTimeout",
      "XDEBUG_MODE=develop,coverage vendor/bin/phpunit -c phpunit.xml.dist --testsuite \"Unit Tests Suite\" --coverage-text --coverage-html=/app/tests/Output"
    ],
    "test-functional": [
      "Composer\\Config::disableProcessTimeout",
      "XDEBUG_MODE=develop,coverage vendor/bin/phpunit -c phpunit.xml.dist --testsuite \"Functional Tests Suite\""
    ],
    "test-all": [
      "Composer\\Config::disableProcessTimeout",
      "XDEBUG_MODE=develop,coverage vendor/bin/phpunit -c phpunit.xml.dist --coverage-text --coverage-html=/app/tests/Output"
    ]
  }
}
